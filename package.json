{
  "name": "crwd-platform",
  "version": "1.0.0",
  "description": "CRWD Security Platform - Frontend and Backend",
  "scripts": {
    "dev": "./start-dev.sh",
    "start": "npm run dev",
    "install:all": "cd api && npm install && cd ../frontend && npm install",
    "backend": "cd api && npm start",
    "frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "build:frontend": "cd frontend && npm run vercel-build",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel"
  },
  "keywords": ["crwd", "security", "payouts", "fraud-detection", "vercel"],
  "author": "CRWD Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}